<div style="margin-left:25%">
	<h2>Post a Comment</h2>

	<% form_for(@post) do |f| %>
	  <%= f.error_messages %>

	  <p>
	    <b><%= f.label :author %>:</b>
	    <%= f.text_field :author %>
	  </p>
	  <p>
	    <b>Comment:</b><br />
	    <%= f.text_area :body %>
	  </p>
	  <p>
	    <%= f.submit 'Create' %>
	  </p>
	<% end %>
</div>
<%= link_to 'Back', posts_path %>